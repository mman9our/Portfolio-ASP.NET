@using Microsoft.AspNetCore.Http
@model IEnumerable<Core_Portfolio.Entities.PortfolioItem>
@{ ViewData["Title"] = "Index"; }



<div style="padding:120px;">
    <h1>Index</h1>

    <div class="container">
            <form asp-action="Index" method="post">
                <input type="text" class="searchTerm" placeholder="Search project name" name="SearchKey">
                <button type="submit" class="searchButton"><i class="fa fa-search"></i> </button>
                
            </form>
    </div>
    <br />
    @if (Context.Session.GetString("email").Equals("moh@gmail.com"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>
    }

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProjectName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        <img src="~/img/portfolio/@item.ImageUrl" class="img-thumbnail" style="width:64px; height:64px;" />
    </td>
    <td>
    @if (Context.Session.GetString("email").Equals("moh@gmail.com"))
    {
        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> 
    }
                        
        
    |
    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> 
    |
    @if (Context.Session.GetString("email").Equals("moh@gmail.com"))
    {
        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
    }
                        
    </td>
</tr>}
        </tbody>
    </table>

</div>